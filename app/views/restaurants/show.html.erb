<div class="container p-3">
    <div class="col-lg-10 offset-lg-1">
        <div class="card text-center">
            <%= image_tag @restaurant.image.url(:medium), class: "card-img-top image-fluid", alt: "card-img-top" %>
            <div class="card-header display-4">
                <%= @restaurant.name %>
            </div>
            <div class="card-body row">
                <div class="col-sm-6">
                    <div class="restaurant-information">
                        <h3>Restaurant Information</h3>
                        <p><%= @restaurant.address1 %></p>
                        <p><%= @restaurant.address2 %></p>
                        <p><%= @restaurant.city %>, <%= @restaurant.state %> <%= @restaurant.zipcode %></p>                
                    </div>
                    <div class="restaurant-categories">
                        <h3>Categories</h3>
                        <% @restaurant.categories.each do |category| %>
                            <%= category.name %>
                        <% end %>
                    </div>
                    <div class="restaurant-details">
                        <h3>Not Sure Where To Put This Yet</h3>
                        <% if user_signed_in? %>
                            <% if @favorite %>
                                <%= link_to "Unfavorite", favorite_restaurant_path(@restaurant, button: "unfavorite"), method: :put, class: "btn btn-primary" %>
                            <% else %>
                                <%= link_to "Favorite", favorite_restaurant_path(@restaurant, button: "favorite"), method: :put, class: "btn btn-primary" %>
                            <% end %>
                        <% end %>         
                        <p> Favorites: <%= @restaurant.favorited_by.count %></p>
                        <small>Submitted By: <%= @submitted.username %></small>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div id="map" class="map">
                        <iframe width="400" height="300" frameborder="0" style="border:0" 
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA4n5tVlG_g_QI0d1uTloOLU4bFUz8GrOA&q=<%= @restaurant.latitude %>,<%= @restaurant.longitude %>" 
                        allowfullscreen></iframe>
                    </div>
                <h3>Google Maps Location</h3>

                </div>
            </div>
            <div class="card-footer">
                <div class="btn-group">
                    <%= link_to "Back", restaurants_path, class: "btn btn-secondary" %>
                    <%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-secondary" %>
                </div>
            </div>
        </div>
    </div>
</div>