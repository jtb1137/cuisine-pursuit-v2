<div class="container">
    <div class="card text-center my-2">
    <%=image_tag @restaurant.image.url(:large), class: "show-image image-fluid" %>
        <div class="card-header display-4">
            <%= @restaurant.name %>
        </div>
        <div class="card-body row">
            <div class="col-sm-6">
                <p><%= @restaurant.address %></p>
                <p><%= @city.name %> <%= @city.state %></p>
                <p>
                <% @restaurant.categories.each do |category| %>
                    <%= category.name %>
                <% end %>
                </p>
            </div>
            <div class="col-sm-6">
               <% if user_signed_in? %>
                    <% if @favorite %>
                        <%= link_to "Unfavorite", favorite_city_restaurant_path(@city, @restaurant, button: "unfavorite"), method: :put, class: "btn btn-primary" %>
                    <% else %>
                        <%= link_to "Favorite", favorite_city_restaurant_path(@city, @restaurant, button: "favorite"), method: :put, class: "btn btn-primary" %>
                    <% end %>
                <% end %>         
                <p> Favorites: <%= @restaurant.favorited_by.count %></p>
                <small>Submitted By: <%= @submitted.username %></small>
            </div>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <%= link_to "Back", city_path(@city), class: "btn btn-secondary" %>
                <%= link_to "Edit", edit_city_restaurant_path(@city, @restaurant), class: "btn btn-secondary" %>
            </div>
        </div>
    </div>
</div>