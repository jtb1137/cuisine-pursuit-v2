<div class="container form-container">
    <div class="row">
        <div class="col-lg-10 offset-lg-1 panel">
            <div class="row p-3">
                <div class="col-md-4">
                    <%= image_tag @user.avatar.url(:thumb), class: "user-profile-thumb" %>
                </div>
                <div class="col-md-8">
                    <div>
                        <h1><%= @user.username %></h1>
                        <h4>Bio</h4>
                        <p><%= @user.bio %></p>
                        
                        <div class="btn-group">
                            <%= link_to "Edit Profile", edit_profile_path(current_user), class: "btn btn-secondary" %>
                            <%= link_to "Account Settings", edit_user_registration_path(current_user), class: "btn btn-secondary" %>
                            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-secondary" %>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-md-10 offset-md-1 panel">
            <div class="user-favorites">
                <h1 class="text-center">Favorites</h1>
                <% @user.favorites.each do |favorite| %>
                    <%= favorite.name %>
                <% end %>
            </div>  
        </div>
    </div>
</div>