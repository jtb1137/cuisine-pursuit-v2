<div class="container form-container">
    <div class="row">
        <div class="col-lg-10 offset-lg-1 panel">
            <div class="row p-3">
                <div class="col-md-4">
                    
                </div>
                <div class="col-md-8">
                    <div>
                        <h1><%= @user.username %></h1>
                        <h4>Maybe more info</h4>
                        <p>Bio</p>
                        <p>Hometown</p>
                        <h2>Favorites</h2>
                        <% @user.favorites.each do |restaurant| %>
                            <p><%= restaurant.name %></p>
                        <% end %>
                        <div class="btn-group">
                            <%= link_to "Settings", edit_user_registration_path(current_user), class: "btn btn-secondary" %>
                            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-secondary" %>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>