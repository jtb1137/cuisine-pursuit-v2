<div class="container-fluid form-container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="form-style panel p-3">
                <div class="panel-heading">
                    <h1>Edit Profile</h1>
                    <%= link_to "Back", profile_path(current_user), class: "btn btn-primary" %>
                </div>
                <div class="panel-body p-3">
                    <%= image_tag @user.avatar.url(:thumb), class: "pb-3" %>
                    <%= form_for @user, url: profile_path(@user), html: { multipart: true } do |f| %>
                        <div class="field form-group row">
                            <%= f.label :avatar, "Avatar", class: "col-sm-2 col-form-label"%>
                            <div class="col-sm-10">
                                <%= f.file_field :avatar, class: "form-control" %>
                            </div>
                        </div>

                        <div class="field form-group row">
                            <%= f.label :bio, class: "col-sm-2 col-form-label"%>
                            <div class="col-sm-10">
                                <%= f.text_area :bio, class: "form-control" %>
                            </div>     
                        </div>
                        <%= f.submit "Update", class: "btn btn-primary" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>